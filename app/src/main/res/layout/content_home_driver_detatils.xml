<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/moreInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:visibility="gone">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <ImageButton
                android:id="@+id/moreInfoBackBtn"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_arrow_back_white"
                android:layout_width="60dp"
                android:layout_height="50dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"

            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/driverTimeAwayD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="0.0 mins"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/driverKmAwayD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="0.0 km"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/driverProfileD"
                android:layout_marginTop="16dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/profile"
                app:civ_border_color="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                app:civ_border_width="1dp"
                />

            <TextView
                android:id="@+id/driverRatingD"
                android:lines="1"
                android:layout_below="@+id/driverProfileD"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/ic_stars_"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/driverNameD"
                android:layout_below="@id/driverRatingD"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/cn"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/car_name"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/cn"
                android:id="@+id/carNameD"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Mestbiduhe ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/p"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/plate_number"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/p"
                android:id="@+id/plateNumD"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="AB8849XH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/phoneNumberD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_margin="16dp"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/ic_call_"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>